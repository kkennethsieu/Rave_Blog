<%- include("partials/header.ejs") %>

<div class="create_container container-lg">
    <div class="row">
        <div class="col">
            <h3 class="py-3">Edit Entry! </h3>

            <form action="/update/<%= submission.id %>" method="POST" enctype="multipart/form-data">
                <label for="name">Author Name:</label>
                <input type="text" name="name" value="<%= submission.author %>" required>
            
                <label for="title">Title:</label>
                <input type="text" name="title" value="<%= submission.title %>" required>
            
                <label for="story">Story:</label>
                <input type="text" name="story" value="<%= submission.story %>" required>
            
                <label for="image">Choose a new front image:</label>
                <input type="file" name="image" accept="image/*">
                
                <input type="submit" value="Update Submission">
            </form>


        </div>
    </div>
</div>


<%- include("partials/footer.ejs") %>
